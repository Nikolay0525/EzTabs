<UserControl 
    x:Class="EzTabs.Presentation.Views.MainControls.TabEditingControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:local="clr-namespace:EzTabs.Presentation.Views.MainControls"
    xmlns:sc="clr-namespace:EzTabs.Presentation.Views.MainControls.SimpleControls"
    xmlns:cbp="clr-namespace:EzTabs.Presentation.Views.MainControls.SimpleControls.ControlBarParts"
    xmlns:dc="clr-namespace:EzTabs.Presentation.Views.MainControls.SimpleControls.ControlBarParts.DropControls"
    xmlns:vm="clr-namespace:EzTabs.Presentation.ViewModels.MainControlsViewModels" 
    xmlns:ct="clr-namespace:EzTabs.Presentation.Resources.Styles.CustomTypes"
    mc:Ignorable="d" 
    d:DesignHeight="540" d:DesignWidth="960"
    Background="#2e2e2e">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Button 
                    Style="{DynamicResource CommonButton}"
                    FontSize="{DynamicResource SmallerFontSize}"
                    x:Name="BackToSearchPage"
                    Content="Back to Search Page"
                    Command="{Binding }">

                </Button>
            </Grid>
            <Grid Grid.Column="1">
                <TextBlock
                    Style="{DynamicResource CommonTextBlock}"
                    TextAlignment="Center"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    x:Name="TabPageTextBlock"
                    Text="Tab Editing"/>
            </Grid>
            <Grid Grid.Column="2">
                <ContentControl x:Name="ControlBar" Content="{Binding}"/>
            </Grid>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="100*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <ct:ImageButton
                    Style="{DynamicResource ImageButton}"
                    x:Name="WholeNoteButton"
                    Command="{Binding}"
                    PathData="M 50,50 A 20,20 0 1 1 50,90 A 20,20 0 1 1 50,50"
                    />
            </Grid>
            <Grid Grid.Column="1">
                <ct:ImageButton
                    Style="{DynamicResource ImageButton}"
                    x:Name="HalfNoteButton"
                    Command="{Binding}"
                    PathData="M 100,50 A 20,20 0 1 1 100,90 A 20,20 0 1 1 100,50
               M 110,50 L 110,-30"
                    />
            </Grid>
            <Grid Grid.Column="2">
                <ct:ImageButton
                    Style="{DynamicResource ImageButton}"
                    x:Name="QuarterNoteButton"
                    Command="{Binding}"
                    PathData="M 150,50 A 20,20 0 1 1 150,90 A 20,20 0 1 1 150,50
               M 160,50 L 160,-30"
                    />
            </Grid>
            <Grid Grid.Column="3">
                <ct:ImageButton
                    Style="{DynamicResource ImageButton}"
                    x:Name="EighthNoteButton"
                    Command="{Binding}"
                    PathData="M 200,50 A 20,20 0 1 1 200,90 A 20,20 0 1 1 200,50
               M 210,50 L 210,-30
               M 210,-30 Q 230,-20 210,-10"
                    />
            </Grid>
            <Grid Grid.Column="4">
                <ct:ImageButton
                    Style="{DynamicResource ImageButton}"
                    x:Name="SixteenthNoteButton"
                    Command="{Binding}"
                    PathData="M 250,50 A 20,20 0 1 1 250,90 A 20,20 0 1 1 250,50
               M 260,50 L 260,-30
               M 260,-30 Q 280,-20 260,-10
               M 260,-10 Q 280,0 260,10"
                    />
            </Grid>
            <Grid Grid.Column="5">
                <ct:ImageButton
                    Style="{DynamicResource ImageButton}"
                    x:Name="ThirtySecondNoteButton"
                    Command="{Binding}"
                    PathData="M 300,50 A 20,20 0 1 1 300,90 A 20,20 0 1 1 300,50
               M 310,50 L 310,-30
               M 310,-30 Q 330,-20 310,-10
               M 310,-10 Q 330,0 310,10
               M 310,10 Q 330,20 310,30"
                    />
            </Grid>
        </Grid>
        <Grid Grid.Row="2">
            <Viewbox>
                <Path Data="M 150,50 A 20,20 0 1 1 150,90 A 20,20 0 1 1 150,50
               M 160,50 L 160,-30" 
        Stroke="White" StrokeThickness="2" Fill="White" />
            </Viewbox>
        </Grid>
    </Grid>
</UserControl>
