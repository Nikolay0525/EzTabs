<UserControl x:Class="EzTabs.View.Window.MainControls.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.View.Window.MainControls"
             mc:Ignorable="d" 
             FontFamily="Inter"
             FontSize="24"
             d:DesignHeight="540" d:DesignWidth="960"
             Background="#93B5C6">
    <Grid>
        <Rectangle Stroke="Black"
                   Fill="White"
                   StrokeThickness="2"
                   Height="34"
                   HorizontalAlignment="Stretch"
                   VerticalAlignment="Top"/>

        <DataGrid x:Name="TabList"
                  Background="White"
                  BorderBrush="Black"
                  BorderThickness="2"
                  HorizontalAlignment="Left"
                  VerticalAlignment="Bottom"
                  Width="619"
                  Height="508"
                  Margin="0,0,0,0">

        </DataGrid>

        <TextBox x:Name="SearchTextBox" 
            Background="Transparent"
            BorderBrush="Black"
            BorderThickness="2"
            Text="Search..."
            Height="34"
            Width="551"
            HorizontalAlignment="Left" 
            VerticalAlignment="Top"
            Margin="68,0,0,0"/>


        <TextBlock x:Name="UserLoginTextBlock"
           Width="281"
 
           Text ="Nik0_ola"
           Foreground="Black"
           TextAlignment="Center"
           HorizontalAlignment="Right" 
           VerticalAlignment="Top"
           Margin="0,0,34,0"/>

        <Button x:Name="MenuButton"
        Width="34"
        Height="34"
        Background="Transparent"
        BorderBrush="Black"
        BorderThickness="2"
        HorizontalAlignment="Right"
        VerticalAlignment="Top"
        Margin="0,0,0,0">
            <Image Stretch="Fill" Source="/Resources/Images/Menu.png"/>
        </Button>

        <Button x:Name="NotificationButton"
                Width="28"
                Height="34"
                Background="Transparent"
                BorderBrush="Black"
                BorderThickness="2"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Margin="0,0,315,0">
                <Image Stretch="Fill" Source="/Resources/Images/Notification.png"/>
        </Button>

        <Button x:Name="FilterButton"
                Width="70"
                Height="34"
                Content="Filter"
                Background="Transparent"
                BorderBrush="Black"
                BorderThickness="2"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="0,0,0,0">
        </Button>

        <Button x:Name="CreateTabButton"
                Width="250"
                Content="Create Tab"
                Background="White"
                BorderBrush="Black"
                BorderThickness="2"
                FontSize="36"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,0,50,100"/>

        <Button x:Name="LoadTabButton"
                Width="250"
                Content="Edit Tab"
                Background="White"
                BorderBrush="Black"
                BorderThickness="2"
                FontSize="36"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Margin="0,100,50,0"/>
    </Grid>
</UserControl>
