<UserControl x:Class="EzTabs.View.Window.MainControls.SimpleControls.LoadingControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.View.Window.MainControls.SimpleControls"
             xmlns:bc="clr-namespace:EzTabs.View.Converters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#2e2e2e"
             x:Name="LoadingControl">
    <UserControl.Resources>
        <bc:BoolToVisibilityConverter x:Key="boolConverter"/>
    </UserControl.Resources>
    <Grid>
        <Ellipse 
            Stretch="Uniform"
            Width="100"
            Height="100"
            Stroke="White"
            Visibility="{Binding IsLoading, Converter={StaticResource boolConverter}, ElementName=LoadingControl}">
            
        </Ellipse>
           
    </Grid>
</UserControl>
