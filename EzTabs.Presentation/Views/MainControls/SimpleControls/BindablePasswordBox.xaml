<UserControl x:Class="EzTabs.Presentation.Views.MainControls.SimpleControls.BindablePasswordBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.Presentation.Views.MainControls.SimpleControls"
             mc:Ignorable="d"
             d:DesignWidth="270"
             Name="rootControl">
    <Grid>
        <PasswordBox Style="{DynamicResource CommonPasswordBox}" x:Name="passwordBox" MaxLength="{Binding MaxLength, ElementName=rootControl}" PasswordChanged="PasswordBox_PasswordChanged" />
    </Grid>
</UserControl>
