<UserControl x:Class="EzTabs.Presentation.Views.MainControls.SimpleControls.ComboButtonControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.Presentation.Views.MainControls.SimpleControls"
             xmlns:ct="clr-namespace:EzTabs.Presentation.Resources.Styles.CustomTypes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Name="rootControl">
    <Grid>
        <Button
            Style="{DynamicResource CommonButton}"
            Content="{Binding Text, ElementName=rootControl}"
            Command="{Binding Command, ElementName=rootControl}"
            CommandParameter="{Binding CommandParameter, ElementName=rootControl}"/>
    </Grid>
</UserControl>
