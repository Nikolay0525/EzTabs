<UserControl x:Class="EzTabs.View.Window.AuthControls.VerificationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.View.Window.AuthControls"
             xmlns:vm="clr-namespace:EzTabs.ViewModel.AuthControlsViewModels;assembly=EzTabs.ViewModel" 
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="540"
             FontFamily="Inter"
             FontSize="24"
             Background="#93B5C6">
    <UserControl.Resources>

    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:VerificationControlViewModel />
    </UserControl.DataContext>

    <Grid>
        <TextBlock x:Name="VerifCodeTextBlock"
                   Text="Write your verification code"
                   Width="300" 
                   TextAlignment="Center"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center" 
                   Margin="0,0,0,100"/>


        <TextBox x:Name="UsernameTextBox"
                 Text="{Binding VerificationCode, UpdateSourceTrigger=PropertyChanged}"
                 Width="270" 
                 BorderBrush="Black"
                 BorderThickness="2"
                 HorizontalAlignment="Center" 
                 VerticalAlignment="Center" 
                 Margin="0,0,0,0"/>

        <Button x:Name="SendVerificationCodeButton"
                Command="{Binding }"
                Width="270"
                Content="Verificate account"
                BorderBrush="Black"
                BorderThickness="2"
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Margin="0,100,0,0"/>
    </Grid>
</UserControl>
