<UserControl x:Class="EzTabs.View.Window.MainControls.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.View.Window.MainControls"
             xmlns:bmc="clr-namespace:EzTabs.View.Window.MainControls.SimpleControls"
             xmlns:vm="clr-namespace:EzTabs.ViewModel.MainControlsViewModels;assembly=EzTabs.ViewModel"
             mc:Ignorable="d" 
             FontFamily="Inter"
             FontSize="24"
             d:DesignHeight="540" d:DesignWidth="960"
             Background="#93B5C6">
    <UserControl.Resources>

    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:SearchControlViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="509*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column ="0" Grid.Row="1" Background="Transparent">
            <ListBox Style="{DynamicResource CommonListBox}" x:Name="TabList"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Background="White"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" Background="Transparent">
            <Button Style="{DynamicResource CommonButton}" x:Name="LoadTabButton"
                    Width="250"
                    Content="Edit Tab"
                    FontSize="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,295,0,0" Height="50"/>
            <Button Style="{DynamicResource CommonButton}" x:Name="CreateTabButton"
                    Width="250"
                    Content="Create Tab"
                    Command="{Binding GoToCreationOfTabCommand}"
                    FontSize="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,153,0,0" Height="50"/>
        </Grid>
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="60"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid Background="Transparent">
                <Button Style="{DynamicResource CommonButton}" x:Name="FilterButton"
                    Content="Filter"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    BorderThickness="1"/>
            </Grid>
            <Grid Grid.Column="1" Background="Transparent">
                <TextBox Style="{DynamicResource CommonTextBox}" x:Name="SearchTextBox" 
                         Background="White"
                         Text="Search..." 
                         VerticalAlignment="Stretch"
                         HorizontalAlignment="Stretch"
                         BorderThickness="1"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="White">
            <bmc:MainControlBar/>
        </Grid>
    </Grid>
</UserControl>
