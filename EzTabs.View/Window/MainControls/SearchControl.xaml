<UserControl x:Class="EzTabs.View.Window.MainControls.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.View.Window.MainControls"
             xmlns:vm="clr-namespace:EzTabs.ViewModel.MainControlsViewModels;assembly=EzTabs.ViewModel"
             mc:Ignorable="d" 
             FontFamily="Inter"
             FontSize="24"
             d:DesignHeight="540" d:DesignWidth="960"
             Background="#93B5C6">
    <UserControl.Resources>

    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:SearchControlViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="509*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column ="0" Grid.Row="1" Background="Transparent">
            <ListBox x:Name="TabList"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Background="White"
                     BorderBrush="Black"
                     BorderThickness="2"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" Background="Transparent">
            <Button x:Name="LoadTabButton"
                    Width="250"
                    Content="Edit Tab"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    FontSize="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,295,0,0" Height="50"/>
            <Button x:Name="CreateTabButton"
                    Width="250"
                    Content="Create Tab"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    FontSize="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,153,0,0" Height="50"/>
        </Grid>
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Background="Transparent">
                <TextBox x:Name="SearchTextBox" 
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Text="Search..." 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"/>
            </Grid>
            <Grid Background="Transparent">
                <Button x:Name="FilterButton"
                    Content="Filter"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="31*"/>
                <ColumnDefinition Width="254*"/>
                <ColumnDefinition Width="31*"/>
            </Grid.ColumnDefinitions>
            <Border Grid.ColumnSpan="3" BorderBrush="Black" BorderThickness="2">
                <TextBlock x:Name="UsernameTextBlock"
                           Foreground="Black"
                           TextAlignment="Center"
                           Text="Nik0_ola"
                           VerticalAlignment="Stretch"
                           HorizontalAlignment="Stretch"/>
            </Border>

            <Grid Background="Transparent">
                <Button x:Name="NotificationButton"
                        Background="Transparent"
                        BorderBrush="Black"
                        BorderThickness="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Path Data="M10.5,2v2.19531c-2.58682,0.66678 -4.5,3.00949 -4.5,5.80469v6l-2,2v1h16v-1l-2,-2v-6c0,-2.7952 -1.91318,-5.1379 -4.5,-5.80469v-2.19531zM10,20c0,1.1 0.9,2 2,2c1.1,0 2,-0.9 2,-2z" Fill="Black" Stretch="Fill"/>
                </Button>
            </Grid>
            <Grid Grid.Column="2" Background="Transparent">
                <Button x:Name="MenuButton"
                        Background="Transparent"
                        BorderBrush="Black"
                        BorderThickness="2"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch">
                    <Path Data="M2,5v2h20v-2zM2,11v2h20v-2zM2,17v2h20v-2z" Fill="Black" Stretch="Fill"></Path>
                </Button>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
