<UserControl x:Class="EzTabs.View.Window.MainControls.TabCreationControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.View.Window.MainControls"
             xmlns:bmc="clr-namespace:EzTabs.View.Window.MainControls.SimpleControls"
             xmlns:vm="clr-namespace:EzTabs.ViewModel.MainControlsViewModels;assembly=EzTabs.ViewModel" 
             xmlns:ui="http://schemas.modernwpf.com/2019"
             mc:Ignorable="d" 
             FontFamily="Inter"
             FontSize="{DynamicResource TextCommonFontSize}"
             d:DesignHeight="540" d:DesignWidth="960"
             Background="#93B5C6">
    <UserControl.Resources>

    </UserControl.Resources>
    <UserControl.DataContext>
        <vm:TabCreationControlViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="509*"/>
        </Grid.RowDefinitions>
        <Grid Background="White">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <Button Style="{DynamicResource CommonButton}" x:Name="GoToSearchButton" 
                        Content="Return to searching" 
                        HorizontalAlignment="Stretch" 
                        VerticalAlignment="Stretch"/>
            </Grid>
            <Grid Grid.Column="1"/>
            <Grid Grid.Column="2">
                <bmc:MainControlBar/>
            </Grid>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="250*"/>
                <ColumnDefinition Width="10"/>
            </Grid.ColumnDefinitions>
            <Grid>
                <TextBlock x:Name="TitleTextBlock"
                           FontSize="{DynamicResource TextCommonFontSize}"
                           Text="Title" Grid.RowSpan="2"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,425"/>

                <TextBox Style="{DynamicResource CommonTextBox}" x:Name="TitleTextBox"
                         Text="{Binding Title, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,0,0,350"
                         Width="350"/>

                <TextBlock x:Name="BandTextBlock"
                           Text="Band" Grid.RowSpan="2"
                           FontSize="{DynamicResource TextCommonFontSize}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,275"/>

                <TextBox Style="{DynamicResource CommonTextBox}" x:Name="BandTextBox"
                         Text="{Binding Band, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,0,0,200"
                         Width="350"/>

                <TextBlock x:Name="GenreTextBlock"
                           Text="Genre" Grid.RowSpan="2"
                           FontSize="{DynamicResource TextCommonFontSize}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,0,0,125"/>

                <TextBox Style="{DynamicResource CommonTextBox}" x:Name="GenreTextBox"
                         Text="{Binding Genre, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,0,0,50"
                         Width="350"/>

                <TextBlock x:Name="KeyTextBlock"
                           Text="Key" Grid.RowSpan="2"
                           FontSize="{DynamicResource TextCommonFontSize}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,25,0,0"/>

                <TextBox Style="{DynamicResource CommonTextBox}" x:Name="KeyTextBox"
                         Text="{Binding Key, UpdateSourceTrigger=PropertyChanged}"
                         HorizontalAlignment="Center"
                         VerticalAlignment="Center"
                         Margin="0,100,0,0"
                         Width="50"/>

                <TextBlock x:Name="BitsPerMinuteTextBlock"
                           Text="BPM" Grid.RowSpan="2"
                           FontSize="{DynamicResource TextCommonFontSize}"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           Margin="0,175,0,0"/>

                <Button Style="{DynamicResource CommonButton}" x:Name="CreateButton"
                        Command="{Binding}"
                        Content="Create Tablature"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Margin="0,400,0,0"
                        Width="250"
                        Height="75">
                </Button>
            </Grid>

            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="267*"/>
                    <RowDefinition Height="200*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid>
                    <TextBlock x:Name="TuningsListTextBlock"
                               FontSize="{DynamicResource TextCommonFontSize}"
                               Text="Tuning of strings"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <ListBox Style="{DynamicResource CommonListBox}" 
                             d:ItemsSource="{Binding ListOfTunings, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Stretch"
                             HorizontalContentAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="2">

                    <Button Style="{DynamicResource CommonButton}" x:Name="EditTuningButton"
                            Command="{Binding}"
                            Content="Add/Edit tuning"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Margin="0,50,0,0"/>

                    <Button Style="{DynamicResource CommonButton}" x:Name="RemoveTuningButton"
                            Command="{Binding}"
                            Content="Remove tuning"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Center"
                            Margin="0,125,0,0"/>

                    <ui:NumberBox Background="White" Width="100" Height="100" Minimum="0" Maximum="100" Value="10"/>
                    
                    <TextBox Style="{DynamicResource CommonTextBox}" x:Name="NoteTextBox"
                             Text="{Binding StringNote, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Center"
                             VerticalAlignment="Center"
                             Margin="50,0,0,0"/>

                </Grid>
            </Grid>
            <Grid Grid.Column="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="77*"/>
                    <RowDefinition Height="432*"/>
                    <RowDefinition Height="15"/>
                </Grid.RowDefinitions>
                <Grid>
                    <TextBlock x:Name="DescriptionTextBlock"
                               FontSize="{DynamicResource TextCommonFontSize}"
                               Text="Description"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Grid>
                <Grid Grid.Row="1">
                    <TextBox x:Name="DescriptionTextBox"
                             FontSize="{DynamicResource TextCommonFontSize}"
                             Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"/>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
