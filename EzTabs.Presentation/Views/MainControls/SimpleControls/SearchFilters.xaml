<UserControl x:Class="EzTabs.Presentation.Views.MainControls.SimpleControls.SearchFilters"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.Presentation.Views.MainControls.SimpleControls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="5"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid Background="#2e2e2e" Grid.Row="0">
            <Border Background="#2e2e2e"/>
        </Grid>
        <Grid Grid.Row="1">
            <ComboBox
            x:Name="OrderByComboBox"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            />
        </Grid> 
    </Grid>
</UserControl>
