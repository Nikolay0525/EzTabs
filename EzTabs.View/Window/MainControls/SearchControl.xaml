<UserControl x:Class="EzTabs.View.Window.MainControls.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EzTabs.View.Window.MainControls"
             xmlns:bmc="clr-namespace:EzTabs.View.Window.MainControls.BaseMainControls"
             xmlns:vm="clr-namespace:EzTabs.ViewModel.MainControlsViewModels;assembly=EzTabs.ViewModel"
             mc:Ignorable="d" 
             FontFamily="Inter"
             FontSize="24"
             d:DesignHeight="540" d:DesignWidth="960"
             Background="#93B5C6">
    <UserControl.Resources>

    </UserControl.Resources>

    <UserControl.DataContext>
        <vm:SearchControlViewModel/>
    </UserControl.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="509*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="79*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Column ="0" Grid.Row="1" Background="Transparent">
            <ListBox x:Name="TabList"
                     HorizontalAlignment="Stretch"
                     VerticalAlignment="Stretch"
                     Background="White"
                     BorderBrush="Black"
                     BorderThickness="2"/>
        </Grid>
        <Grid Grid.Column="1" Grid.Row="1" Background="Transparent">
            <Button x:Name="LoadTabButton"
                    Width="250"
                    Content="Edit Tab"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    FontSize="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,295,0,0" Height="50"/>
            <Button x:Name="CreateTabButton"
                    Width="250"
                    Content="Create Tab"
                    Command="{Binding GoToCreationOfTabCommand}"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    FontSize="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Top"
                    Margin="0,153,0,0" Height="50"/>
        </Grid>
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="20*"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Background="Transparent">
                <TextBox x:Name="SearchTextBox" 
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    Text="Search..." 
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"/>
            </Grid>
            <Grid Background="Transparent">
                <Button x:Name="FilterButton"
                    Content="Filter"
                    Background="White"
                    BorderBrush="Black"
                    BorderThickness="2"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"/>
            </Grid>
        </Grid>
        <Grid Grid.Column="1" Background="White">
            <bmc:MainControlBar/>
        </Grid>
    </Grid>
</UserControl>
